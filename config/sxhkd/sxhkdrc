# look up keysym names with xev 
# @ - on KeyRelease
# can make chains with ;
# multiline commands with \

# -----------------
# |    General    |
# -----------------

# program launcher / browser
super + {_, shift +} backslash
	{rofi -show drun -display-run ' ' -display-drun ' ', firefox}

# (scratchpad) terminal
super + {_, shift +} Return
	{urxvt, scratchpad-toggle.sh}

# (floating) file manager
super + {_, shift +} semicolon
	{urxvt -e ranger, urxvt -name ranger -e ranger} 

# (power menu) lock
super + {_, shift} + slash
	{lock.sh, oblogout}

# take screenshot of selection
super + Print
	maim -s -b 2 -c 255,0,0 | tee ~/Pictures/screenshots/$(date +screenshot-%s).png | xclip -selection clipboard -t image/pn

# take sceenshot of entire screen
super + shift + Print
	maim | tee ~/Pictures/screenshots/$(date +screenshot-%s).png | xclip -selection clipboard -t image/pn

# kill window with click
super + F4
	xkill
	
# show desktop
super + shift + f
	bspc node $(bspc query -N -d focused | sed -n 1p) -g hidden

# reload monit config
super + shift + F9
	monitors.sh

# reload sxhkd config
super + shift + F10
	pkill -USR1 -x sxhkd

# reload bspwm config
super + shift + F11
	bspc wm -r

# quit bspwm
super + shift + F12
	bspc quit

# --------------
# |    XF86    |
# --------------

# screen brightness
XF86MonBrightness{Down,Up}
	xbacklight -{dec,inc} 5 -steps 1 && notify-send " Light" "Brightness: $(xbacklight | cut -c1-2)"

XF86Audio{Raise,Lower}Volume
	sh -c "pactl set-sink-mute 0 false ; pactl set-sink-volume 0 {+,-}2%"
XF86AudioMute
#	pactl set-sink-mute 0 toggle
	amixer set Master toggle
XF86AudioMicMute
	pactl set-source-mute 1 toggle

# media TODO:
XF86AudioPlay
	mpc toggle
XF86Audio{Prev,Next}
	mpc {prev,next}

# ---------------
# |    Bspwm    |
# ---------------

# focus/send to desktop
super + {_, shift +} {1,2,3,4,5,6,7,8,9,0}
	bspc {desktop -f, node -d} '{1-9,10}'

# focus the next/previous desktop
super + bracket{left,right}
	bspc desktop -f {prev,next}

# focus the last node/desktop
super + {grave,Tab}
	bspc {desktop, node} -f last

# focus the next/previous node in current desktop
alt + {_,shift + } Tab 
	bspc node -f {next,prev}.local

# focus/move node in given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,o,comma,period}
	bspc node -f @{parent,brother,first,second}

# set the window state
super + {a,d,s,f}
	bspc node -t {tiled,~pseudo_tiled,~floating,~fullscreen}

# set windows state for all nodes in desktop
super + shift + {a,s,d}
	for i in `bspc query -N -d`; do bspc node $i -t {tiled,floating,pseudo_tiled}; done;

# set the node flags
super + {z,x,c,v}
	bspc node -g {locked,marked,sticky,private}

# focus newest urgent node
super + u
	bspc node -f newest.urgent

# swap current node and biggest local node
super + equal
	bspc node -s biggest.local

# hide node
super + minus
	bspc node -g hidden=on

# send newest marked node to newest preselected node
super + i
	bspc node newest.marked -n newest.!automatic --follow

# (force) close node
super + {_, shift + } w
	bspc node -{c,k}

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p ~{west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused desktop
super + ctrl + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# expand a window by moving one of its sides outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its sides inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + shift + {u,i,o,p}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# alternate between bar/nobar in current desktop
super + n
	bspc config -d focused top_padding -$(($(bspc config top_padding) + $(bspc config -d focused top_padding)))

# increment/decrement window gap
super + shift + {minus,equal}
	bspc config window_gap $(($(bspc config window_gap) {-,+} 5))

# rotate tree clockwise/anticlockwise
super + {_, shift +} e
	bspc node -R {90,270}

# flip tree vertical/horizontal
super + {_, shift +} q
	bspc node -F {vertical,horizontal}

# resize nodes at tree to have default_split_ratio/equal_area
super + {_, shift +} r
	bspc node -{E,B}

