{
    "git.ignoreMissingGitWarning": true,
    "scm.diffDecorationsGutterWidth": 1,
    "explorer.openEditors.visible": 0,
    "window.menuBarVisibility": "toggle",
    "window.title": "</>",
    "workbench.statusBar.feedback.visible": false,
    "workbench.editor.openPositioning": "last",
    "workbench.enableExperiments": false,
    "workbench.startupEditor": "none",
    "workbench.settings.editor": "json",
    "workbench.colorCustomizations": {
        "statusBar.background": "#2e3440",
        "statusBar.noFolderBackground": "#2e3440",
        "statusBar.debuggingBackground": "#2e3440"
    },
    "editor.minimap.enabled": false,
    "editor.fontFamily": "Source Code Pro",
    "editor.dragAndDrop": false,
    "editor.hover.delay": 100,
    "editor.insertSpaces": false,
    "editor.roundedSelection": false,
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-_",
    "editor.formatOnSave": false,
    "vim.statusBarColorControl": true,
    "vim.searchHighlightColor": "rgba(180, 142, 173, 1)",
    "vim.statusBarColors.insert": "#81a1c1",
    "vim.statusBarColors.normal": "#2e3440",
    "vim.statusBarColors.replace": "#ebcb8b",
    "vim.statusBarColors.visual": "#a3be8c",
    "vim.statusBarColors.visualblock": "#a3be8c",
    "vim.statusBarColors.commandlineinprogress": "#5e81ac",
    "vim.statusBarColors.searchinprogressmode": "#5e81ac",
    "vim.statusBarColors.visualline": "#a3be8c",
    "vim.showmodename": true,
    "vim.useSystemClipboard": true,
    "vim.iskeyword": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-_",
    "go.formatTool": "gofmt",
    "go.inferGopath": true,
    "go.toolsGopath": "/home/kpopstoyanov/go",
    "[c]": {
        "editor.detectIndentation": false,
        "editor.tabSize": 8,
        "editor.formatOnSave": false,
        "editor.autoIndent": false,
        "editor.renderWhitespace": "boundary",
        "editor.renderIndentGuides": false,
    },
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": "\\.c$",
                "cmd": "indent -gnu -o ${file} ${file}"
            }
        ]
    },
    "workbench.sideBar.location": "left",
    "workbench.colorTheme": "Nord",
}
