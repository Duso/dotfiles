# ----------------------
# |    Bar Template    |
# ----------------------
[bar/default]
override-redirect = true
wm-restack = bspwm
offset-x = 10
offset-y = 10
width = 1900
height = 20
border-size = 2
background = ${colors.nord3}
foreground = ${colors.nord5}
border-color = ${colors.nord10}
cursor-click = pointer
cursor-scroll = ns-resize
font-0 = SauceCodeProNerdFont:Bold:size=12;3
font-1 = SourceCodePro:Semibold:size=12;3

modules-left = bspwm r1 xwindow r2
modules-center = date
modules-right = l1 volume l1 xkeyboard l1 bat0 bat1 l2

tray-background = ${colors.nord1}
tray-padding = 5
tray-scale = 1.0

# --------------
# |    Bars    |
# --------------
[bar/laptop]
monitor = eDP1
inherit = bar/default
tray-position = right

[bar/home]
monitor = HDMI2
inherit = bar/default
tray-position = none

