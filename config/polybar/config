# ---------------------
# |    Date Module    |
# ---------------------
[module/date]
type = internal/date
interval = 1

date = "%d %b" 
date-alt = "%d.%m.%Y"

time = %H:%M
time-alt = %H:%M:%S

label =羽 %time%  %date% 

# ----------------------
# |    Audio Module    |
# ----------------------
[module/volume]
type = internal/pulseaudio
